{
  "manifest_version": 3,
  "name": "Crypto Arbitrage Finder",
  "version": "1.0",
  "description": "Find arbitrage opportunities across different cryptocurrency exchanges.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.binance.com/*",
    "https://api.kraken.com/*",
    "https://api.pro.coinbase.com/*"
  ]
}
